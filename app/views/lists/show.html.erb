<div class="container mt-2">
  <h1>Lists</h1>
  <p>
    <%= link_to '< Lists', lists_path, class: 'btn-light opacity-25 text-decoration-none' %>
  </p>
  <%= cl_image_tag(list.photo.key, width: 400, height: 300, crop: :fill) %>
  <div class="row justify-content-around">
  <div class="col-12 col-lg-6>
    <h1 class="my-3"><%= @list.name %></h1>
    <div class="d-flex align-items-center">
      <% @list.bookmarks.each do |bookmark| %>
      <div class="cards">
        <div class="card-product">
          <img src="<%= bookmark.movie.poster_url %>">
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %></strong></h2>
            <p><%= bookmark.movie.overview %></p>
            <p><%= bookmark.movie.rating %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  </div>
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary my-3' %>
</div>

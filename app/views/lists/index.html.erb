<div class="container">
  <h1>Lists</h1>
  <%= link_to "Add", new_list_path, class: 'btn btn-primary my-3' %>

  <% @lists.each do |list| %>
  <div>
    <%= link_to list_path(list['id']), class: 'text-decoration-none' do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path list.photo.url %>')">
        <%= list.name %>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
